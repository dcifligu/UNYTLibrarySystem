<div class="flex h-screen">
  <div class="hidden lg:flex items-center justify-center flex-1 bg-white text-black">
    <%= image_tag "LibraryLogin.png", alt: "Library Logo", class: "h-full w-full object-cover" %>
  </div>
  <div class="w-full lg:w-1/2 flex items-center justify-center">
    <div class="max-w-md w-full p-6 bg-[#c9e0dc] rounded-xl shadow-lg">
      <h1 class="text-3xl font-semibold mb-6 text-black text-center">Login</h1>
      <div class="mt-4 flex flex-col lg:flex-row items-center justify-between">
        <div class="w-full lg:w-1/2 mb-2 lg:mb-0">
          <button type="button" class="w-full flex justify-center items-center gap-2 bg-white text-sm text-gray-600 p-2 rounded-md hover:bg-gray-50 border border-gray-200 focus:outline-none  transition-colors duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="w-4" id="google">
              <path fill="#fbbb00" d="M113.47 309.408 95.648 375.94l-65.139 1.378C11.042 341.211 0 299.9 0 256c0-42.451 10.324-82.483 28.624-117.732h.014L86.63 148.9l25.404 57.644c-5.317 15.501-8.215 32.141-8.215 49.456.002 18.792 3.406 36.797 9.651 53.408z"></path>
              <path fill="#518ef8" d="M507.527 208.176C510.467 223.662 512 239.655 512 256c0 18.328-1.927 36.206-5.598 53.451-12.462 58.683-45.025 109.925-90.134 146.187l-.014-.014-73.044-3.727-10.338-64.535c29.932-17.554 53.324-45.025 65.646-77.911h-136.89V208.176h245.899z"></path>
              <path fill="#28b446" d="m416.253 455.624.014.014C372.396 490.901 316.666 512 256 512c-97.491 0-182.252-54.491-225.491-134.681l82.961-67.91c21.619 57.698 77.278 98.771 142.53 98.771 28.047 0 54.323-7.582 76.87-20.818l83.383 68.262z"></path>
              <path fill="#f14336" d="m419.404 58.936-82.933 67.896C313.136 112.246 285.552 103.82 256 103.82c-66.729 0-123.429 42.957-143.965 102.724l-83.397-68.276h-.014C71.23 56.123 157.06 0 256 0c62.115 0 119.068 22.126 163.404 58.936z"></path>
            </svg> Continue with Google </button>
        </div>
        <div class="w-full lg:w-1/2 ml-0 lg:ml-2">
          <button type="button" class="w-full flex justify-center items-center gap-2 bg-white text-sm text-gray-600 p-2 rounded-md hover:bg-gray-50 border border-gray-200 focus:outline-none  transition-colors duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" id="github" class="w-4 text-black">
            <path d="M349.13,136.86c-40.32,0-57.36,19.24-85.44,19.24C234.9,156.1,212.94,137,178,137c-34.2,0-70.67,20.88-93.83,56.45-32.52,50.16-27,144.63,25.67,225.11,18.84,28.81,44,61.12,77,61.47h.6c28.68,0,37.2-18.78,76.67-19h.6c38.88,0,46.68,18.89,75.24,18.89h.6c33-.35,59.51-36.15,78.35-64.85,13.56-20.64,18.6-31,29-54.35-76.19-28.92-88.43-136.93-13.08-178.34-23-28.8-55.32-45.48-85.79-45.48Z"/>
            <path d="M340.25,32c-24,1.63-52,16.91-68.4,36.86-14.88,18.08-27.12,44.9-22.32,70.91h1.92c25.56,0,51.72-15.39,67-35.11C333.17,85.89,344.33,59.29,340.25,32Z"/>
            </svg> Continue with Apple </button>
        </div>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "mt-1 p-2 w-full border rounded-md focus:outline-none transition-colors duration-300" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "current-password" ,class: "mt-1 p-2 w-full border rounded-md focus:outline-none transition-colors duration-300" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="my-2">
            <%= f.check_box :remember_me%>
            <%= f.label :remember_me ,class:"text-sm font-medium text-gray-700"%>
          </div>  
        <% end %>

        <div>
          <%= f.submit "Log in", class: "w-full bg-black text-white p-2 rounded-md hover:bg-gray-800 focus:bg-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors duration-300" %>
        </div>
      <% end %>
      <div class="mt-4 text-sm text-gray-600 text-center flex flex-col">
        <p>Don't have an account?
          <%= link_to "Sign Up here", new_user_registration_path, class: "text-black hover:underline" %>
        </p>
        <p>Return to 
          <a href="/" class="text-black hover:underline">HomePage</a>
        </p>
      </div>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
