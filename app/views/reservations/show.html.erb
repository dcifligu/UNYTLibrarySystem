<%# app/views/reservations/show.html.erb %>
<div class="pt-40 w-screen">
  <div class="w-full max-w-2xl mx-auto">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">Reservation Details</h2>
        <div>
          <%= link_to "Back to All Reservations", reservations_path, class: "text-gray-500 hover:text-gray-700" %>
        </div>
      </div>
      
      <div class="mb-6">
        <h3 class="text-xl font-semibold mb-2"><%= @reservation.reservable.title %></h3>
        <p class="text-gray-600"><%= @reservation.reservable_type %></p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <div>
          <p class="text-sm text-gray-500">Reservation Dates</p>
          <p><%= @reservation.start_date.strftime("%B %d, %Y") %> - <%= @reservation.end_date.strftime("%B %d, %Y") %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-500">Status</p>
          <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
            <%= @reservation.status == 'pending' ? 'bg-yellow-100 text-yellow-800' : 
               @reservation.status == 'approved' ? 'bg-green-100 text-green-800' :
               @reservation.status == 'rejected' ? 'bg-red-100 text-red-800' : 
               'bg-gray-100 text-gray-800' %>">
            <%= @reservation.status.capitalize %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>