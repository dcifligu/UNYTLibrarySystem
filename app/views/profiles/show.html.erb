<div class="bg-gray-50 min-h-screen">
  <div class="max-w-6xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">My Profile</h1>
      <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">Manage your personal information.</p>
    </div>

    <div class="mt-12">
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="p-8">
          <h2 class="text-2xl font-bold text-gray-900"><%= current_user.full_name %></h2>
          <p class="mt-2 text-gray-500"><%= current_user.email %></p>
          <p class="mt-2 text-gray-500"><%= current_user.contact_address %></p>
          <div class="mt-6">
            <%= link_to "Edit Profile", edit_profile_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>