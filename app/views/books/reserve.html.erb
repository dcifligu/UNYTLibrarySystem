<div class="pt-40 w-screen">
  <div class="w-full max-w-md mx-auto">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h2 class="text-2xl font-bold mb-6">Reserve Book: <%= @book.title %></h2>
      
      <%= form_with(model: [@book, @reservation], url: book_reservations_path(@book), local: true) do |form| %>
        <% if @reservation.errors.any? %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            <ul>
              <% @reservation.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="mb-4">
          <%= form.label :start_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= form.date_field :start_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        
        <div class="mb-6">
          <%= form.label :end_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= form.date_field :end_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        
        <div class="flex items-center justify-between">
          <%= form.submit "Submit Reservation", class: "bg-amber-300 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline hover:bg-amber-400" %>
          <%= link_to "Cancel", details_book_path(@book), class: "text-gray-500 hover:text-gray-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>