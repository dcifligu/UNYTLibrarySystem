<div class="bg-gray-50 min-h-screen">
  <div class="max-w-6xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">Journals Collection</h1>
      <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">Explore our academic journals and publications.</p>
    </div>

    <div class="mt-8">
      <%= form_with url: journals_path, method: :get, class: "flex justify-center" do |form| %>
        <%= form.text_field :query, placeholder: "Search journals...", class: "w-1/2 px-4 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        <%= form.submit "Search", class: "px-4 py-2 bg-indigo-600 text-white font-medium rounded-r-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% end %>
    </div>

    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% @journals.each do |journal| %>
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
          <div class="p-8">
            <h2 class="text-2xl font-bold text-gray-900"><%= journal.title %></h2>
            <p class="mt-2 text-gray-500"><%= journal.publisher %></p>
            <p class="mt-2 text-sm text-gray-500"><%= journal.description %></p>
            <div class="mt-4 flex space-x-4">
              <%= link_to "Details", details_journal_path(journal), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              <% if current_user&.admin? %>
                <%= button_to "Delete", journal_path(journal), method: :delete, data: { confirm: "Are you sure you want to delete this journal?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>