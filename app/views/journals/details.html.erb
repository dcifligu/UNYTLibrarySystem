<div class="flex flex-col items-center justify-center min-h-screen py-10">
  <div class="w-1/2 bg-white rounded-lg shadow-lg p-6">
    <div class="text-center">
      <h1 class="text-3xl font-bold"><%= @journal.title %></h1>
      <h2 class="text-lg text-gray-500">by <%= @journal.volume %></h2>
    </div>

    <div class="mt-4">
      <p class="text-md text-gray-700"><%= @journal.description %></p>
    </div>

    <div class="mt-6">
      <span class="block font-semibold">Language:</span> <%= @journal.language %>
      <span class="block font-semibold">Published:</span> <%= @journal.publish_year %>
      <span class="block font-semibold">Publisher:</span> <%= @journal.publisher %>
    </div>

    <div class="mt-6">
      <%= link_to "Back to All journals", journals_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
