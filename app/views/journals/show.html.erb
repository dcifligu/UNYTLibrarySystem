<div class="pt-40 w-screen h-screen">
  <div class="w-full h-full">
    <div class="mx-6">
      <div class="w-full h-fit grid grid-cols-5 justify-items-center gap-3">
        <% @journals.each do |journal| %>
          <div class="w-4/5 h-fit py-12 px-2 bg-black rounded-lg">
            <div class="flex flex-col justify-center items-center h-fit w-full bg-white rounded-md p-3">
              <div class="flex justify-center items-center h-48 w-full bg-black rounded-md">
                <%= image_tag "book.png", alt: "Book Logo", class: "h-full w-full object-cover" %>
              </div>
              <div class="flex flex-col gap-2 items-center justify-center">
                <h1 class="text-xl font-medium"><%= journal.title %></h1>
                <span class="text-sm text-stone-400 font-normal">
                  <%= journal.description.truncate(100) %>
                </span>
                <div class="flex flex-row items-center justify-center w-full gap-1">
                  <%= link_to "Details", details_journal_path(journal), class: "w-1/2 flex justify-center bg-amber-50 py-1 px-4 rounded-md" %>
                  <% if user_signed_in? %>
                    <% unless current_user.admin? %>
                      <%= link_to "Reserve", reserve_book_path(book), class: "w-1/2 flex justify-center bg-amber-50 py-1 px-4 rounded-md" %>
                    <% end %>
                  <% else %>
                    <span onclick=call_popup() class= "w-1/2 flex justify-center bg-amber-50 py-1 px-4 rounded-md cursor-pointer">Reserve</span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div id="authModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center">
  <div class="bg-white p-6 rounded-lg">
    <h2 class="text-xl mb-4">Only users with an account can make reservations</h2>
    <p class="mb-4">Continue to login or signup</p>
    <div class="flex justify-end">
      <%= link_to "Login", new_user_session_path, class: "bg-blue-500 text-white py-2 px-4 rounded mr-2" %>
      <%= link_to "Signup", new_user_registration_path, class: "bg-green-500 text-white py-2 px-4 rounded" %>
    </div>
  </div>
</div>